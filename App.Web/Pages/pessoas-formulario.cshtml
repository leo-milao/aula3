@page "/pessoas/formulario"
<h4>Formulário de Pessoas</h4>
<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Peso</label>
            <input type="text" name="cep" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group mb-12">
            <label>Nome</label>
            <input type="text" name="nome" class="form-control">
        </div>
    </div>
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Data Nascimento</label>
            <input type="text" name="uf" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group mb-12">
            <label>Cidade</label>
            <select class="js-example-basic-single" style="width:100%" name="cidadeId" id="cidadeId"></select>
        </div>
    </div>
</div>
<div class="row">
    <button class="btn btn-danger" onclick="window.location.href='/pessoas'">Cancelar</button>
    <button class="btn btn-info" onclick="Salvar();">Salvar</button>
</div>

@section Scripts {
    <script src="~/js/pages/pessoas-formulario.js"></script>
}
